<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>

<AnchorPane fx:id="anchorPane" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.ballfx.MainController">
   <children>
      <Pane fx:id="ballPane" onMouseClicked="#changeColor" prefHeight="400.0" prefWidth="400.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Circle fx:id="ball" fill="#ff1f1f" layoutX="162.0" layoutY="155.0" radius="10.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.2" />
            <Button fx:id="settings" layoutX="12.0" layoutY="12.0" mnemonicParsing="false" onAction="#openSettingsWindow" text="Open settings" />
         </children>
	  </Pane>
   </children>
</AnchorPane>
